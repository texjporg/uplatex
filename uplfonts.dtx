\def\@text@composite#1#2#3#{%
  \begingroup
  \setbox\z@=\hbox\bgroup%
  \ybaselineshift\z@\tbaselineshift\z@
  \expandafter\@text@composite@x
  \csname\string#1-\string#2\endcsname}

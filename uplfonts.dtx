  \leavevmode
  \expandafter\lower
    \iftdir
      \ifmdir
        \ifmmode\tbaselineshift\else\ybaselineshift\fi
      \else
        \tbaselineshift
      \fi
    \else
      \ybaselineshift
    \fi
    \box\z@
  \endgroup}
